def give_options(x,y,z):
    print("a):", x)
    print("b):", y)
    print("c):", z)
    
print("Hello! Welcome to my Quiz" "\n" "All Questions carries 10 marks each")
ans = input("Are you ready to play (yes/no): ")
a =print("Note: wrtie answers! do not write option.")
score = 0
total_questions = 10

correct_ans =["oriental cricket club", "england", "south africa","ck nayadu","ajit wadekar","1974","lala amarnath","polly umrigar","virendra sehwag"]

if ans.lower() == "yes":
    print(a)
    print("Question- Which of the following is first cricket club in India ")
    give_options("East Indian Cricket Club","Oriental Cricket Club","Bombay Cricket Club" )
    ans=input("what is the answer???")
    if ans.lower() == correct_ans[0]:
        score=score+1
        print("Correct")
    else:
        print("Incorrect")

        
    print(a)
    print("Question- Indian played first test match against  ")
    give_options("South Africa", "England", "Australia")
    ans = input("what is the answer???")
